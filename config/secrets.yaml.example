# NetOps Toolkit - 凭证配置模板
# =====================================
# 
# 使用说明:
# 1. 复制此文件为 secrets.yaml
# 2. 修改下面的凭证信息
# 3. 密码可以使用明文,也可以使用 ENC: 前缀的加密格式
# 
# 加密密码:
#   使用 netops encrypt-password 命令可以生成加密后的密码
#
# 警告: 请勿将 secrets.yaml 提交到版本控制系统!

credentials:
  # 管理员凭证
  admin_cred:
    username: "admin"
    password: "your_admin_password"  # 或使用 ENC:加密后的密码
    # 可选: enable密码 (用于特权模式)
    enable_password: ""
    
  # 普通操作员凭证
  operator_cred:
    username: "operator"
    password: "your_operator_password"
    
  # 路由器专用凭证
  router_cred:
    username: "netadmin"
    password: "your_router_password"
    enable_password: "your_enable_password"
    
  # 防火墙凭证
  fw_cred:
    username: "fwadmin"
    password: "your_fw_password"
    
  # 服务器凭证
  server_cred:
    username: "root"
    password: "your_server_password"
    # 可选: 使用SSH密钥认证
    # key_file: "/path/to/private_key"
    # passphrase: "key_passphrase"
    
  # 测试环境凭证
  test_cred:
    username: "test"
    password: "test123"
    
  # 云端设备凭证
  cloud_cred:
    username: "cloudadmin"
    password: "your_cloud_password"

# API密钥 (用于云端服务等)
api_keys:
  # 示例: 云监控API
  # cloud_monitor:
  #   api_key: "your_api_key"
  #   api_secret: "your_api_secret"
  
# SSH密钥配置
ssh_keys:
  # 默认SSH私钥路径
  # default_key: "~/.ssh/id_rsa"
  # 特定设备的SSH密钥
  # cloud_key: "/path/to/cloud_private_key"
